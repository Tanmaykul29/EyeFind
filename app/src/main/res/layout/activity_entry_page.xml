    <Button
        android:id="@+id/txt_recog_button"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_margin="100dp"
        android:background="@drawable/ic_getstarted"
        android:text="Text Recognition"
        android:textAllCaps="false"
        android:textColor="@color/custom_color_background"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Options" />

    <Button
        android:id="@+id/obj_recog_button"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_margin="100dp"
        android:background="@drawable/ic_getstarted"
        android:text="Object Detection"
        android:textAllCaps="false"
        android:textColor="@color/custom_color_background"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_recog_button" />

